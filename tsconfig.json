{
  "compilerOptions": {
    "outDir": "output",
    "sourceMap": false,
    "target": "es6",
    "module": "es6",
    "lib": ["es6"],
    "moduleResolution": "node",
    "useDefineForClassFields": false,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dts"
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "es6"
    }
  }
}